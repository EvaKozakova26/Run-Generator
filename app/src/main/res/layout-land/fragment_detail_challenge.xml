<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.uhk.fim.runhk.fragments.DetailChallengeFragment"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapDetail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        tools:context="cz.uhk.fim.runhk.activities.MapsActivity" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textViewDetailTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewDetailDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISTANCE" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textViewDetailExps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPS"
            android:layout_gravity="center" />

    </LinearLayout>


</LinearLayout>
