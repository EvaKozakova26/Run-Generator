<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.uhk.fim.runhk.fragments.DetailChallengeFragment"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mapDetail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context="cz.uhk.fim.runhk.activities.MapsActivity" />


    <TextView
        android:id="@+id/textViewDetailDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISTANCE" />

    <TextView
        android:id="@+id/textViewDetailExps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPS" />

    <TextView
        android:id="@+id/textViewDetailTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TIME" />

</LinearLayout>
