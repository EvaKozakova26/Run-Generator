<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="cz.uhk.fim.runhk.activities.MainActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:context="cz.uhk.fim.runhk.activities.MapsActivity" />

    <fragment
        android:id="@+id/fragmentQuest"
        android:name="cz.uhk.fim.runhk.fragments.ChallengeLocationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>


</LinearLayout>



