<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.uhk.fim.runhk.activities.PlayerProfileActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <ProgressBar
        android:id="@+id/progress_exps"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:progressTint="@color/progressBarColor" />

    <TextView
        android:id="@+id/textViewPlayerNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nick"
        android:gravity="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textViewPlayerLevel"
        android:layout_marginBottom="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:gravity="center"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnGo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUN FOR LIFE"/>

    <Button
        android:id="@+id/btnQuestList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See my quests"/>


</LinearLayout>
